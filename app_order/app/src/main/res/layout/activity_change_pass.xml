<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/frame3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue_700">
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_back"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:id="@+id/btn_back_change_pass"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="@string/change_pass"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/Enter_pass_hint_current"
            android:textColor="@color/red"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_edit_text"
            android:weightSum="12"
            android:layout_marginStart="20dp">
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="@string/Enter_pass_hint_current"
                android:id="@+id/txtCurrentPass"
                android:paddingLeft="10dp"
                android:layout_weight="11.5"
                android:background="@null"
                android:inputType="textPassword"/>
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_no_show"
                android:backgroundTint="@color/blue_500"
                android:id="@+id/btn_show_1"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="@string/Enter_pass_hint"
            android:layout_marginStart="10dp"
            android:textColor="@color/red"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_edit_text"
            android:weightSum="12"
            android:layout_marginStart="20dp">
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="@string/Enter_pass_hint"
                android:id="@+id/txtNewPass"
                android:paddingLeft="10dp"
                android:layout_weight="11.5"
                android:background="@null"
                android:inputType="textPassword"/>
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_no_show"
                android:backgroundTint="@color/blue_500"
                android:id="@+id/btn_show_2"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/Enter_pass_hint_again"
            android:layout_marginStart="10dp"
            android:textColor="@color/red"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_edit_text"
            android:weightSum="12"
            android:layout_marginStart="20dp">
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="@string/Enter_pass_hint_again"
                android:id="@+id/txt_NewPassAgain"
                android:paddingLeft="10dp"
                android:layout_weight="11.5"
                android:background="@null"
                android:inputType="textPassword"/>
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_no_show"
                android:backgroundTint="@color/blue_500"
                android:id="@+id/btn_show_3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="bottom">

            <Button
                android:id="@+id/btn_sen_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_btn_login"
                android:text="@string/send"
                android:textSize="20sp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>