<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:id="@+id/frame3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Enter_pass_hint"
            android:textColor="@color/red"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/txtPass"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_edit_text"
            android:hint="@string/Enter_pass_hint"
            android:inputType="textPassword"
            android:padding="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Enter_pass_hint_again"
            android:textColor="@color/red"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/txtPassAgain"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_edit_text"
            android:hint="@string/Enter_pass_hint_again"
            android:inputType="textPassword"
            android:padding="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="bottom">

            <Button
                android:id="@+id/btnSend3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_btn_login"
                android:text="@string/send"
                android:textSize="20sp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>